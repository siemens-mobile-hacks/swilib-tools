{
	"compilerOptions": {
		"declaration": true,
		"rootDir": ".",
		"outDir": "./dist",
		"target": "ESNext",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"lib": ["ESNext"]
	},
	"exclude": ["node_modules", "dist"]
}
